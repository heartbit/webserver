doctype html
html(lang="en")

	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(href="//fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel='stylesheet')
		link(rel='stylesheet', href='./css/login.css')

	body
		.container-fluid.expanded-panel
			.row.vertical-offset-100
				.col-md-4.col-md-offset-4
					.panel.panel-defaut
						.panel-heading
							.row-fluid.user-row
								img.img-responsive(src="./img/logo-200.png" alt="logo")
					.panel-body
						form.form-signin(accept-charset="UTF-8", role="form")
							fieldset
								label.panel-login
									.login_result
								input.form-control#email(placeholder="Email", type="text")
								input.form-control#password(placeholder="Password", type="password")
								hr.star-primary
								input.btn.btn-lg.btn-success.btn-block#login(type="submit", value="Login")


